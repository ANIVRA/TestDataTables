@model TestDataTables.Models.RegisterViewModel

<div class="log-in-wrapper">
    <h1 class="log-in-title">Sign Up<br><small>Create an account to gain access</small></h1>
    @* <form>*@
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control input-lg", placeholder = "Your First Name" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control input-lg", placeholder = "Your Last Name" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control input-lg", placeholder = "Your Display Name" })
        </div>
        <div class="form-group">
            @*<input type="email" class="form-control input-lg" name="email" id="email" placeholder="Your Email Address">*@
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-lg", placeholder = "Your Email Address" })
        </div>
        <div class="form-group">
            @*<input type="email" class="form-control input-lg" name="email_confirmation" id="email_confirmation" placeholder="Confirm Email">*@
            @Html.TextBoxFor(m => m.ConfirmEmail, new { @class = "form-control input-lg", placeholder = "Confirm Email Address" })
        </div>
        <div class="form-group">
            @*<input type="password" class="form-control input-lg" name="password" id="password" placeholder="Account Password (min 8 chars)">*@
            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-lg", placeholder = "Account Password (min 8 chars)" })
        </div>
        <div class="form-group">
            @*<input type="password" class="form-control input-lg" name="password" id="password" placeholder="Account Password (min 8 chars)">*@
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-lg", placeholder = "Confirm password" })
        </div>
        @*<div class="form-group">
            <input type="checkbox" name="Terms" id="Terms" value="false" data-icheck>
            <label for="Terms" class="icheck-label">
                I agree to the <a href="#">terms &amp; conditions</a>
            </label>
        </div>*@
        @*<a href="sign-up-success.html" class="btn btn-transparent btn-lg btn-transparent-primary btn-block">
            Sign Up
        </a>*@
        <input type="submit" class="btn btn-transparent btn-lg btn-transparent-primary btn-block" value="Sign up" />
        <ul class="login-bottom-links">
            <li><a href="@Url.Action("Login")">Already have an account?</a></li>
        </ul>
    }
    @*</form>*@
</div>

